<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title - pocketSteam</title>
    <link href="@Url.Content("~/Content/reset.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.4.4.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.scrollTo-1.4.2-min.js")" type="text/javascript"></script>
    <meta name="description" content="A web & android app that allows you to talk to your Steam friends on mobile devices." />
    <script type="text/javascript">

        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-23023983-2']);
        _gaq.push(['_trackPageview']);

        (function () {
            var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
            var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();

</script>
</head>

<body>
    <div class="header">pocketSteam BETA</div>
        @RenderBody()
    <div class="copyright">All rights reserved <a href="http://www.azzy.co/">Azzy</a> &amp; <a href="http://www.valvesoftware.com/">Valve</a> &copy; @DateTime.Now.Year<br />pocketSteam is an unoffical site and is not affiliated with Valve or Steam in any way</div>
</body>
</html>
